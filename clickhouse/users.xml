<?xml version="1.0"?>
<clickhouse>
    <profiles>
        <default>
            <!-- Memory settings optimized for ETL workloads -->
            <max_memory_usage>3000000000</max_memory_usage>
            <max_memory_usage_for_user>2000000000</max_memory_usage_for_user>
            <max_memory_usage_for_all_queries>3500000000</max_memory_usage_for_all_queries>
            
            <!-- Query settings for parallel processing -->
            <max_concurrent_queries>50</max_concurrent_queries>
            <max_threads>8</max_threads>
            <max_execution_time>300</max_execution_time>
            <max_block_size>65536</max_block_size>
            <max_partitions_per_insert_block>100</max_partitions_per_insert_block>
            
            <!-- Network timeouts for Spark connections -->
            <connect_timeout>10</connect_timeout>
            <receive_timeout>300</receive_timeout>
            <send_timeout>300</send_timeout>
            <queue_max_wait_ms>5000</queue_max_wait_ms>
            
            <!-- HTTP timeouts for bulk inserts -->
            <http_connection_timeout>300</http_connection_timeout>
            <http_receive_timeout>300</http_receive_timeout>
            <http_send_timeout>300</http_send_timeout>
        </default>

        <!-- Read-only profile for monitoring -->
        <readonly>
            <readonly>1</readonly>
            <max_memory_usage>1000000000</max_memory_usage>
        </readonly>
    </profiles>

    <users>
        <!-- Remove the problematic default user with empty password -->
        <!-- Only define users with proper passwords -->

        <admin>
            <password>clickhouse_admin</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </admin>
    </users>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>


