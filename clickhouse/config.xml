<?xml version="1.0"?>
<clickhouse>
    <logger>
        <level>information</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>10</count>
    </logger>

    <listen_host>0.0.0.0</listen_host>
    
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>

    <!-- Better connection settings -->
    <max_concurrent_queries>100</max_concurrent_queries>
    <max_connections>4096</max_connections>
    <keep_alive_timeout>10</keep_alive_timeout>
    
    <!-- HTTP-specific settings -->
    <http_max_connections>4096</http_max_connections>
    <http_max_field_value_size>1048576</http_max_field_value_size>
    <http_max_multipart_form_data_size>1048576</http_max_multipart_form_data_size>
    <http_max_request_size>104857600</http_max_request_size>
    <http_max_url_size>1048576</http_max_url_size>
    <http_connection_timeout>300</http_connection_timeout>
    <http_receive_timeout>300</http_receive_timeout>
    <http_send_timeout>300</http_send_timeout>

    <!-- Remove the problematic http_handlers section -->
    <!-- <http_handlers>
        <rule>
            <url>/</url>
            <methods>POST,GET</methods>
        </rule>
    </http_handlers> -->

    <path>/var/lib/clickhouse/</path>
    <tmp_path>/var/lib/clickhouse/tmp/</tmp_path>
    <user_files_path>/var/lib/clickhouse/user_files/</user_files_path>
    <format_schema_path>/var/lib/clickhouse/format_schemas/</format_schema_path>
    
    <user_directories>
        <users_xml>
            <path>/etc/clickhouse-server/users.xml</path>
        </users_xml>
        <local_directory>
            <path>/var/lib/clickhouse/access/</path>
        </local_directory>
    </user_directories>

    <!-- Safe memory limits based on your 4GB container -->
    <max_server_memory_usage>3221225472</max_server_memory_usage> <!-- 3GB -->
    <max_memory_usage>2147483648</max_memory_usage> <!-- 2GB -->
    <max_memory_usage_for_user>1610612736</max_memory_usage_for_user> <!-- 1.5GB -->
    
    <!-- Memory settings for better stability -->
    <max_bytes_before_external_group_by>1073741824</max_bytes_before_external_group_by> <!-- 1GB -->
    <max_bytes_before_external_sort>536870912</max_bytes_before_external_sort> <!-- 512MB -->

    <default_profile>default</default_profile>
    <default_database>airflow</default_database>
    
    <timezone>UTC</timezone>

    <!-- Uncomment if remote servers are needed -->
    <!--
    <remote_servers>
        <logs>
            <shard>
                <replica>
                    <host>localhost</host>
                    <port>9000</port>
                </replica>
            </shard>
        </logs>
    </remote_servers>
    -->
</clickhouse>
