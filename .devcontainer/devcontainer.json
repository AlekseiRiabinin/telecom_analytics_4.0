{
	"name": "Telecom Analytics Airflow Dev",
	"dockerComposeFile": [
		"../docker-compose.telecom.yml",
		"docker-compose.yml"
	],
	"service": "airflow-webserver",
	"workspaceFolder": "/opt/airflow",
	"shutdownAction": "none",
	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"mtxr.sqltools", 
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"eamodio.gitlens"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.analysis.extraPaths": ["/opt/airflow/dags", "/opt/airflow/plugins"]
			}
		}
	},
	
	"forwardPorts": [8083],
	"remoteUser": "airflow"
}
